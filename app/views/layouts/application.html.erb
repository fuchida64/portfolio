<!DOCTYPE html>
<html>
  <head>
    <title>Portfolio</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <% if admin_signed_in? %>
      <%= link_to '管理者ログアウト', destroy_admin_session_path, method: :delete, "data-confirm" => "本当にログアウトしますか？", class: "" %>
    <% elsif user_signed_in? %>
      <%= link_to 'マイページ', user_path(current_user.id), class: "" %>
      <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, "data-confirm" => "本当にログアウトしますか？", class: "" %>
    <% else %>
      <%= link_to 'ログイン', new_user_session_path, class: "" %>
      <%= link_to '会員登録', new_user_registration_path, class: "" %>
      <%= link_to '管理者ログイン', new_admin_session_path, class: "" %>
      <%= link_to '管理者登録', new_admin_registration_path, class: "" %>
    <% end %>

    <%= yield %>

  </body>
</html>
