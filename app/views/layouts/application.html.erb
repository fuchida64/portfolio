<!DOCTYPE html>
<html>
  <head>
    <title>Portfolio</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/pretty-checkbox@3.0/dist/pretty-checkbox.min.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" >
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= stylesheet_link_tag    'slick', media: 'all' %>
    <%= stylesheet_link_tag    'slick-theme', media: 'all' %>
    <%= stylesheet_link_tag    'lity', media: 'all' %>

    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <%= javascript_include_tag 'application' %>
    <%= javascript_include_tag 'slick.min' %>
    <%= javascript_include_tag 'lity' %>

  </head>

  <body>

      <% if @header_flag != true %>

        <header class="header1">
          <nav>
            <ul>
              <p class="home-li">
                <%= link_to homes_path, class: "home1" do %>
                  <%= image_tag('logo.jpg', :size => "40x40", :alt => "アイコン") %>
                  <span class="app-title1">ec change</span>
                <% end %>
              </p>
              <% if admin_signed_in? %>
                <li><%= link_to 'Users', admin_users_path, class: "" %></li>
                <li><%= link_to 'Admins', admins_path, class: "" %></li>
                <li><%= link_to 'logout', destroy_admin_session_path, method: :delete, "data-confirm" => "本当にログアウトしますか？", class: "" %></li>
              <% elsif user_signed_in? %>
                <li><%= link_to 'to_do', task_groups_path, class: "" %>
                  <ul>
                    <% current_user.task_groups.each do |task| %>
                      <li><%= link_to task.title, task_group_path(task.id), class: "" %></li>
                    <% end %>
                  </ul>
                </li>
                <li><%= link_to 'memory', memory_groups_path, class: "" %>
                  <ul>
                    <% current_user.memory_groups.each do |memory| %>
                      <li><%= link_to memory.title, memory_group_path(memory.id), class: "" %></li>
                    <% end %>
                  </ul>
                </li>
                <li><%= link_to 'diary', diaries_path, class: "" %></li>
                <li><%= link_to 'my page', user_path(current_user.id), class: "" %></li>
                <li><%= link_to 'logout', destroy_user_session_path, method: :delete, "data-confirm" => "本当にログアウトしますか？", class: "" %></li>
              <% else %>
                <li><%= link_to 'login', new_user_session_path, class: "" %></li>
                <li><%= link_to 'sign up', new_user_registration_path, class: "" %></li>
              <% end %>
            </ul>
          </nav>
        </header>

      <% else %>

        <header>
          <div class="row header-box">
            <div class="title-box">
              <%= link_to homes_path, class: "" do %>
                <%= image_tag('logo.jpg', :size => "50x50", :alt => "アイコン") %>
                <span class="app-title">ec change</span>
              <% end %>
            </div>
          </div>
        </header>

      <% end %>

      <% if alert %>
        <div class="alert alert-danger">
          <a class="close" data-dismiss="alert">×</a>
          <%= alert %>
        </div>
      <% end %>

      <% if notice %>
        <div class="alert alert-success">
          <a class="close" data-dismiss="alert">×</a>
          <%= notice %>
        </div>
      <% end %>

      <%= yield %>



  </body>
</html>
