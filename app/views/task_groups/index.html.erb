
<%= stylesheet_link_tag "task_groups/index", :media => "all" %>

			<div class="headline">
				<h2>Task list</h2>
			</div>
			<% @task_groups.each do |task| %>
				<div class="task-group">
					<h4><%= link_to task.title, task_group_path(task.id), class: "task-title" %></h4>
					<hr>
					<div class="task-content">
						<p class="task-text"><%= task.content %></p>
					</div>
					<div class="task-info">
						<p>InBox : <%= task.tasks.where(status: 1).count %></p>
						<p>OnGoing : <%= task.tasks.where(status: 2).count %></p>
						<p>Done : <%= task.tasks.where(status: 3).count %></p>
						<p><a href="#modal<%= task.id %>" class="modalOpen">＊</a></p>
					</div>

					<div class="modal" id="modal<%= task.id %>">
						<div class="overLay modalClose"></div>
						<div class="inner">
							<div class="modal-form">
							    <h4>タスクリスト編集</h4>
								<%= form_for task, url: task_group_path(task.id)  do |f| %>
									<div class="field">
									  	<%= f.label :title, "リスト名" %><br />
									  	<%= f.text_field :title %>
									</div>
									<div class="field">
										<%= f.label :content, "説明" %><br />
										<%= f.text_area :content %>
									</div>
									<div class="actions">
									  	<%= f.submit '更新', class: "edit-btn" %>
									</div>
								<% end %>
								<%= link_to "delete", task_group_path(task.id), method: :delete, class: 'delete-btn', "data-confirm" => "本当に削除しますか?" %>
								<a href="" class="modalClose"><p class="close-mark">×</p></a>
							</div>
						</div>
					</div>

				</div>
			<% end %>
			<div class="task-group group2">
				<a href="#create-modal" class="modalOpen plus-mark">＋</a>
			</div>

		<div class="modal" id="create-modal">
			<div class="overLay modalClose"></div>
			<div class="inner">
				<div class="modal-form">
				    <h4>タスクリスト作成</h4>
					<%= form_for(@task_group_new) do |f| %>
						<div class="field">
						  	<%= f.label :title, "リスト名" %><br />
						  	<%= f.text_field :title %>
						</div>
						<div class="field">
							<%= f.label :content, "説明" %><br />
							<%= f.text_area :content %>
						</div>
						<div class="actions">
						  	<%= f.submit '作成', class: "edit-btn" %>
						</div>
					<% end %>
					<a href="" class="modalClose"><p class="close-mark">×</p></a>
				</div>
			</div>
		</div>

<%= javascript_include_tag "task_group.js" %>

