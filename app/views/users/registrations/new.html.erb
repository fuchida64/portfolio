
<%= stylesheet_link_tag "users/registrations/new", :media => "all" %>

<div class="materialContainer">
   <div class="box">

      <div class="title">SIGN UP</div>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="input">
          <%= f.label :name, "ユーザー名"%><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
          <span class="spin"></span>
        </div>

        <div class="input">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          <span class="spin"></span>
        </div>

        <div class="input">
          <%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "off" %>
          <span class="spin"></span>
          <i class="password-length">6文字以上</i>
        </div>

        <div class="input">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off" %>
          <span class="spin"></span>
        </div>

        <div class="button login">
          <button><span>GO</span><i class="fa fas fa-tasks"></i><%= f.submit "登録", class: 'submit-btn' %></button>
        </div>
      <% end %>
      <%= render "users/shared/links" %>

   </div>
</div>

<script>
  $(function() {

   $(".input input").focus(function() {

      $(this).parent(".input").each(function() {
         $("label", this).css({
            "line-height": "18px",
            "font-size": "18px",
            "font-weight": "100",
            "top": "0px"
         })
         $(".spin", this).css({
            "width": "100%"
         })
      });
   }).blur(function() {
      $(".spin").css({
         "width": "0px"
      })
      if ($(this).val() == "") {
         $(this).parent(".input").each(function() {
            $("label", this).css({
               "line-height": "60px",
               "font-size": "24px",
               "font-weight": "300",
               "top": "10px"
            })
         });

      }
   });

   $(".button").click(function(e) {
      var pX = e.pageX,
         pY = e.pageY,
         oX = parseInt($(this).offset().left),
         oY = parseInt($(this).offset().top);

      $(this).append('<span class="click-efect x-' + oX + ' y-' + oY + '" style="margin-left:' + (pX - oX) + 'px;margin-top:' + (pY - oY) + 'px;"></span>')
      $('.x-' + oX + '.y-' + oY + '').animate({
         "width": "500px",
         "height": "500px",
         "top": "-250px",
         "left": "-250px",

      }, 600);
      $("button", this).addClass('active');
   })
  });
  $( document ).ready(function() {
    if($('div').hasClass('field_with_errors')){
        $(this).css('color','red');
        $('.password-length').addClass('hide');
    }
  });
</script>