
<%= stylesheet_link_tag "users/passwords/edit", :media => "all" %>

<main>
  <div class="materialContainer">
     <div class="box">

        <div class="title">新しいパスワードを作成</div>
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.hidden_field :reset_password_token %>
          <div class="input">
            <%= f.label :password, "新しいパスワード" %><br />
            <%= f.password_field :password, autofocus: true, autocomplete: "off" %>
            <span class="spin"></span>
            <i class="password-length">パスワードの長さは最低 6文字です。</i>
          </div>

          <div class="input">
            <%= f.label :password_confirmation, "新しいパスワードを再入力" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "off" %>
            <span class="spin"></span>
          </div>

          <div class="button login">
            <button><span>Create</span><i class="fa fas fa-tasks"></i><%= f.submit "Change my password", class: 'submit-btn' %></button>
          </div>
        <% end %>
        <%= render "users/shared/links" %>

     </div>
  </div>
</main>

<script>
  $(function() {

   $(".input input").focus(function() {

      $(this).parent(".input").each(function() {
         $("label", this).css({
            "line-height": "18px",
            "font-size": "18px",
            "font-weight": "100",
            "top": "0px"
         })
         $(".spin", this).css({
            "width": "100%"
         })
      });
   }).blur(function() {
      $(".spin").css({
         "width": "0px"
      })
      if ($(this).val() == "") {
         $(this).parent(".input").each(function() {
            $("label", this).css({
               "line-height": "60px",
               "font-size": "24px",
               "font-weight": "300",
               "top": "10px"
            })
         });

      }
   });

   $(".button").click(function(e) {
      var pX = e.pageX,
         pY = e.pageY,
         oX = parseInt($(this).offset().left),
         oY = parseInt($(this).offset().top);

      $(this).append('<span class="click-efect x-' + oX + ' y-' + oY + '" style="margin-left:' + (pX - oX) + 'px;margin-top:' + (pY - oY) + 'px;"></span>')
      $('.x-' + oX + '.y-' + oY + '').animate({
         "width": "500px",
         "height": "500px",
         "top": "-250px",
         "left": "-250px",

      }, 600);
      $("button", this).addClass('active');
   })
  });
  $( document ).ready(function() {
    if($('div').hasClass('field_with_errors')){
        $(this).css('color','red');
        $('.password-length').addClass('hide');
    }
  });
</script>