
<div class="container">
	<div class="row">
		<h2>マイページ</h2>
		<div class="link">
			<% if current_user?(@user) %>
				<%= link_to "編集", edit_user_path(current_user.id), class: "btn" %>
				<%= link_to "パスワード変更はこちら", edit_password_path(current_user.id), class: "btn" %>
			<% end %>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-3">
			<table class='table'>
				<tr>
			    	<th><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "/images/no_image.jpg" %></th>
			  	</tr>
			  	<tr>
			    	<th><%= @user.name %></th>
			  	</tr>
			  	<tr>
			    	<th><%= @user.email %></th>
			  	</tr>
			</table>
		</div>
		<div class="col-lg-9">
			<table class="table">
				<% @diaries.each do |d| %>
				<tr>
					<th><%= d.title %></th>
					<th><%= d.content %></th>
					<th><%= d.inform_status %></th>
				</tr>
				<% end %>
			</table>
		</div>
	</div>
</div>

<%= render 'follow_form' %>
<%= render 'stats' %>
