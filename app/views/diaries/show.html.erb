
<%= stylesheet_link_tag "diaries/show", :media => "all" %>
<div class="row">
	<table class='table'>
		<tr>
			<ul class="slider">
				<% @diary.diary_images.each do |g| %>
					<li><%= attachment_image_tag g, :diary_image, format: 'jpeg' %></li>
				<% end %>
			</ul>
		</tr>
		<tr>
		  <td><%= @user.name %></td>
		</tr>
		<tr>
		  <td><%= @diary.title %></td>
		</tr>
		<tr>
		  <td><%= @diary.content %></td>
		</tr>
	</table>

	<%= render 'users/follow_form' %>

	<% if @diary.favorited_by?(current_user) %>
	    <%= link_to diary_favorites_path(@diary), method: :delete do %>
	      <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
	      <%= @diary.favorites.count %> いいね
	    <% end %>
	<% else %>
	    <%= link_to diary_favorites_path(@diary), method: :post do %>
	      <i class="fa fa-heart" aria-hidden="true"></i>
	      <%= @diary.favorites.count %> いいね
	    <% end %>
	<% end %>

	<%= form_for [@diary,@diary_comment] do |f| %>
		<%= f.text_field :comment, placeholder: "コメントする" %>
	  	<%= f.submit %>
	<% end %>

	<% @diary.diary_comments.each do |d| %>
		<%= d.comment %><br>
	<% end %>

</div>

<%= javascript_include_tag "diary.js" %>