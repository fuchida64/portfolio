
<div class="container">
  <div class="row">
    <h2>管理者 一覧</h2>
    <table class='table'>
        <thead>
          <tr>
            <th>ID</th>
            <th>登録日時</th>
            <th></th>
            <th>管理者名</th>
            <th>詳細</th>
          </tr>
        </thead>

        <% @admins.each do |admin| %>
        <tbody>
          <tr>
            <td><%= admin.id %></td>
            <td><%= admin.created_at.to_s(:db) %></td>
            <td><%= attachment_image_tag admin, :admin_image, :fill, 30, 30, format: 'jpeg', fallback: "/images/no_image.jpg" %></td>
            <td><%= admin.admin_name %></td>
            <td><%= link_to "編集", admin_path(admin.id), class: "btn" %></td>
          </tr>
        </tbody>
        <% end %>
    </table>
  </div>
</div>

