
<div class="container">
	<div class="row">
		<h2>登録情報</h2>
		<div class="link">
			<%= link_to "編集", edit_admin_path(@admin.id), class: "btn" %>
		</div>
	</div>
	<div class="row">
	 	<div class="col-lg-6">
			<table class='table'>
				<tr>
			    	<th><%= attachment_image_tag @admin, :admin_image, :fill, 100, 100, format: 'jpeg', fallback: "/images/no_image.jpg" %></th>
			  	</tr>
			  	<tr>
			    	<th><%= @admin.admin_name %></th>
			  	</tr>
			  	<tr>
			    	<th><%= @admin.email %></th>
			  	</tr>
			</table>
		</div>
	</div>
</div>
